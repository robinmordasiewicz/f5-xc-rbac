# EditorConfig for f5-xc-user-group-sync
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = true
# Allow variable indentation for markdown lists (PyMarkdown uses 3-space for nested bullets)
indent_size = unset

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# CSV files - don't modify
[*.csv]
trim_trailing_whitespace = false
insert_final_newline = false
